<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NYC Subway Departure Widget</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <section id="app info">
        <div class="container text-center mt-5">
            <div class="row">
                <div class="col">
                    <h1 class="text-primary">NYC Subway Departure Widget</h1>
                    <p class="text-light">Select a station below to view the next 5 departure times</p>
                </div>
            </div>
        </div>
    </section>

    <section id="station selection form">
        <form action="/submit" method="POST">
            <div class="container text-start">
                <div class="row gy-2">
                    <div class="col-12">
                        <label class="form-label text-info" for="station">Station:</label>
                        <select class="form-select text-light" id="station" name="station" required>
                            <option value="" disabled selected>Select a station</option>
                            <option value="station1">Astoria-Ditmars Blvd</option>
                            <option value="station3">Astoria Blvd</option>
                            <option value="station4">30th Ave</option>
                            <option value="station5">Broadway</option>
                            <option value="station6">36th Ave</option>
                            <option value="station8">39th Ave-Dutch Kills</option>
                            <option value="station9">Queensboro Plaza</option>
                            <!-- Add more stations as needed -->
                        </select>
                    </div>    
                    <div class="col-12">
                        <label class="form-label text-info" for="line">Line:</label>
                        <select class="form-select text-light" id="line" name="line" required>
                            <option value="" disabled selected>Select a line</option>
                            <option value="N">N - Express</option>
                            <option value="W">W - Local</option>
                            <!-- Add more lines as needed -->
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label text-info" for="direction">Direction:</label>
                        <select class="form-select text-light" id="direction" name="direction" required>
                            <option value="" disabled selected>Select a direction</option>
                            <option value="North">Northbound</option>
                            <option value="South">Southbound</option>
                            <!-- Add more lines as needed -->
                        </select>
                    </div>
                    <div class="col-12 text-end">
                        <button class="btn btn-success btn-lg mt-3 w-25" type="submit">Submit <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-check-square" viewBox="0 0 20 20">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                            <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                          </svg></button>
                    </div>
                </div>
            </div>
        </form>
    </section>

</body>
</html>